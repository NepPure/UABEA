<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sys="clr-namespace:System;assembly=netstandard"
             xmlns:uabea="clr-namespace:UABEAvalonia"
             x:Class="UABEAvalonia.App">
	<Application.Styles>
		<StyleInclude Source="avares://Avalonia.Themes.Default/DefaultTheme.xaml"/>
		<StyleInclude Source="avares://Avalonia.Themes.Default/Accents/BaseLight.xaml"/>
		<!--<StyleInclude Source="avares://Avalonia.Themes.Default/Accents/BaseDark.xaml"/>-->
		<StyleInclude Source="avares://Avalonia.Controls.DataGrid/Themes/Default.xaml"/>
		<StyleInclude Source="/ExtendedControlStyles.axaml"/>
		<Style>
			<Style.Resources>
				<!-- thicker scrollbar -->
				<sys:Double x:Key="ScrollBarThumbThickness">14</sys:Double>
			</Style.Resources>
		</Style>
		<Style Selector="TextBlock">
			<Setter Property="FontFamily" Value="Microsoft YaHei,Simsun,苹方-简,宋体-简"/>
		</Style>
	</Application.Styles>
</Application>